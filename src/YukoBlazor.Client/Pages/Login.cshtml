@page "/manage/login"
@inject ApiClient API
@inject IdentityContainer ID
@inject Microsoft.AspNetCore.Components.Services.IUriHelper UriHelper

<div id="main-wrapper">
    <div class="main section" id="main">
        <div class="widget Blog" data-version="1" id="Blog1">
            <div class="blog-posts hfeed">
                <h4>Login</h4>
                <p>
                    <input bind="@username" class="textbox" placeholder="Username" type="text" />
                </p>
                <p>
                    <input bind="@password" class="textbox" placeholder="Password" type="password" />
                </p>
                <p>
                    <input onclick="@SetIdentityAsync" class="button" value="Login" type="button" />
                </p>
            </div>
        </div>
    </div>
</div>


@functions
{
    string username;
    string password;

    private async Task SetIdentityAsync()
    {
        ID.SetIdentity(username, password);
        if (await API.ValidateIdentityAsync(username, password))
        {
            UriHelper.NavigateTo("/");
        }
    }
}